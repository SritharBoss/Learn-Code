<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.restarting">
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MaterialActivity"
            android:parentActivityName=".activities.MainActivity"/>
        <activity
            android:name=".activities.ScoreKeeper"
            android:theme="@style/ScoreKeeper"
            android:parentActivityName=".activities.MainActivity"/>
        <activity android:name=".activities.SqliteActivity"
            android:parentActivityName=".activities.MainActivity"/>
        <activity android:name=".activities.TabHostActivity"/>

        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/SplashTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CustomListView"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.FragmentActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.ScrollingActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.EditTextActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.TextViewActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity android:name=".activities.MainActivity" />
        <activity
            android:name=".activities.SpinnerActivity"
            android:parentActivityName=".activities.MainActivity" />
    </application>

</manifest>